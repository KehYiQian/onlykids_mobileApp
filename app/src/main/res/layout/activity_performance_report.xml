<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerformanceReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">


        <TextView
            android:id="@+id/reportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Learning Progress Report"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/UserInfoRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/reportTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/tvUserInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: , Age: , Level: "
                    android:textStyle="italic"
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="14dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Profile"
                    android:src="@drawable/edit_symbol"
                    app:tint="@color/black" />
            </LinearLayout>


        <TextView
            android:id="@+id/tvReportSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:text="Subject:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/UserInfoRow" />


        <Spinner
            android:id="@+id/spinnerReportSubject"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tvReportSubject"
            app:layout_constraintTop_toTopOf="@id/tvReportSubject" />

        <Spinner
            android:id="@+id/spinnerReportTime"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.228"
            app:layout_constraintStart_toEndOf="@+id/tvReportTime"
            app:layout_constraintTop_toTopOf="@+id/tvReportTime" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerReportTime" />

        <TextView
            android:id="@+id/tvNormalizationInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Easy ×1, Medium ×1.25, Hard ×1.5 (more scores for harder!))"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerReportTime" />

        <TextView
            android:id="@+id/tvReportTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:text="Time: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReportSubject" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:elevation="4dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineChart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewAveScore"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:srcCompat="@drawable/score_report" />

                <TextView
                    android:id="@+id/tvAveScore"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="Average Score: 0" />
            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:orientation="vertical">-->

<!--                <ImageView-->
<!--                    android:id="@+id/imageViewHintUsed"-->
<!--                    android:layout_width="85dp"-->
<!--                    android:layout_height="85dp"-->
<!--                    app:srcCompat="@drawable/hint_report" />-->

<!--                <TextView-->
<!--                    android:id="@+id/tvHintUsed"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="42dp"-->
<!--                    android:gravity="center"-->
<!--                    android:text="Hint used: 0" />-->
<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewQuizDone"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:srcCompat="@drawable/quiz_report" />

                <TextView
                    android:id="@+id/tvQuizDone"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="Quiz Done: 0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Feedback"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/tvFeedbackDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="36dp"
            android:text="Focus more on:addition, subtraction"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.389"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFeedback" />

        <TextView
            android:id="@+id/tvGroupInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Scores averaged by group (total divided into 10)"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelXAxis" />

        <TextView
            android:id="@+id/labelYAxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:rotation="-90"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/lineChart"
            app:layout_constraintBottom_toBottomOf="@id/lineChart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/labelXAxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Attempt / Group"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/lineChart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
