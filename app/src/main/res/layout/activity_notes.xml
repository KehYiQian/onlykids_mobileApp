<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notes"
            android:contentDescription="Notes Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Pick Your Notes!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif" />

        <!-- Back to Chatbox Button -->
        <ImageButton
            android:id="@+id/backToChatButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back to Chatbox" />
    </LinearLayout>

    <!-- Responses RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/responsesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/saveToAppButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FF6F61"
            android:textColor="@android:color/white"
            android:text="Save"
            android:textSize="14sp"
            android:padding="6dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/viewNotesButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#40C4FF"
            android:textColor="@android:color/white"
            android:text="View"
            android:textSize="14sp"
            android:padding="6dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/clearChatButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FF4444"
            android:textColor="@android:color/white"
            android:text="Clear"
            android:textSize="14sp"
            android:padding="6dp"
            android:elevation="2dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>